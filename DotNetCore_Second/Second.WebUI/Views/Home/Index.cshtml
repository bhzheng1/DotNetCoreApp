@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div>
        <p>Input number and dynamically change the total sum</p>
        @*only allow number input: start*@
        <input type="number" /><br />

        <input id="input1" type="text" value="123,123" onkeypress="return event.charCode >= 48 && event.charCode <= 57" onkeyup="delayFunction(this, function () { updateTotal(sender) }, 500);" />
        <label id="total" value="100">$100</label>
        <br />
        <input id="input2" type="text" onkeypress="return isNumeric(event)" onkeyup="javascript: syncTotal(this)" value="1,234" />
        @*only allow number input: end*@
        <label id="input" value="100">$100</label>
    </div>

    <div class="container">
        <button class="btn btn-primary" data-toggle="modal" data-target="#modalSample1Container">open inline modal</button>
        <button class="btn btn-primary" data-toggle="modal" data-target="#particalViewModal">partical View Modal</button>
        <button class="btn btn-primary positive" data-toggle="modal" data-target="#modalSample2Container">Approvel</button>
        <button class="btn btn-primary positive" id="showDataTableModal">DataTableModal</button>

        <a class="btn btn-primary positive" data-toggle="modal" data-target="#modalSample4Container" href="/Home/GetDepartmentInfos">link</a>
    </div>
</div>

@*inline modal*@
<div id="modalSample1Container" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@*partical view modal*@
<div id="particalViewModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <partial name="~/Views/Shared/_ShowParticalView.cshtml">
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!--此处必须有modal-dialog-->
<div id="modalSample2Container" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

<!--datatable modal-->
<div id="modalSample3Container" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

<div id="modalSample4Container" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#modalSample1Container").on("hide.bs.modal", function (e) {
            alert('The modal is now hidden.');
        });
        $("#modalSample1Container").on("hidden.bs.modal", function (e) {
            alert('The modal is now hidden.');
        });

        $("#modalSample2Container").on("show.bs.modal", function (e) {
            $.ajax({
                url: "/Home/GetModalSample",
                type: 'POST',
                data: {},
                success: function (data) {
                    $('#modalSample2Container').find('.modal-content').html(data);
                },
                error: function (data) {
                    toastr.error("Error occurred, Please contact NPARS team.");
                }
            });
        });

        $("#modalSample4Container").on("show.bs.modal", function (e) {
            $(e.relatedTarget).click(function (e) { e.preventDefault; });
            try {
                $(this).find('.modal-content').load(e.relatedTarget.href, {hello:"Hello World"}, function (response, status, xhr) {
                    if (status == "error") {
                        $(this).load("/Home/ModalError");
                        return;
                    }
                });
            }catch (e) { };
        });

        function SaveSomething(data) {
            toastr.success(`${data} was saved successfully!`);
            $("#modalSample2Container").modal("hide");
        };

        $("#showDataTableModal").on("click", function (e) {
            $.ajax({
                url: "Home/GetDepartmentInfos",
                type: "GET",
                success: function (data) {
                    $("#modalSample3Container").find('.modal-content').html(data);
                    $("#modalSample3Container").modal('show');
                },
                error: function (data) {
                    toastr.success(`${data} failed!`);
                },
            });
        });

    </script>
}
