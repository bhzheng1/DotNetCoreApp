@using Second.Model;
@using System.ComponentModel;
@model IList<DepartmentInfo>

@{
    float[] colWidths = {20,20,20,20,20,20,20,20,20,10,10 };
    string[] colWidthsRatio = new string[colWidths.Length];
    for (int i = 0; i < colWidths.Length; i++) {
        colWidthsRatio[i] = (colWidths[i] * 100 / colWidths.Sum()).ToString() + "%";
    }

    var j = 0;
 }

<h1>Dynamic Table</h1>
<table>
    <thead>
        <tr>
            @foreach (var item in Model.GetType().GetGenericArguments()[0].GetProperties())
            {
                var dp = item.GetCustomAttributes(typeof(DisplayNameAttribute), true).Cast<DisplayNameAttribute>().SingleOrDefault();
                <th width=@colWidthsRatio[j]>
                    @(dp != null? dp.DisplayName:item.Name)
                </th>
                j += 1;
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @foreach (var property in item.GetType().GetProperties())
                {
                    <td>@property.GetValue(item)</td>
                }
            </tr>
        }
    </tbody>
</table>
